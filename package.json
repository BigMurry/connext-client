{
  "name": "connext",
  "version": "0.0.2",
  "description": "Containerized state channels",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src -d dist",
    "prepublishOnly": "npm run build",
    "docs:api": "jsdoc2md src/*.js > docs/api.md --configure docs/jsdoc.json --partial docs/templates/header.hbs --global-index-format none",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && npm run docs:api && gitbook build",
    "docs:serve": "npm run docs:prepare && npm run docs:api && gitbook serve",
    "docs:clean": "rimraf _book",
    "test": "mocha --recursive --exit --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConnextProject/ethcalate-client.git"
  },
  "files": [
    "dist",
    "artifacts"
  ],
  "standard": {
    "ignore": [
      "build/**"
    ]
  },
  "keywords": [
    "payment channels",
    "state channels",
    "Ethereum",
    "web3",
    "scaling",
    "blockchain",
    "connext",
    "ethcalate"
  ],
  "author": "Rahul Sethuram <rahul@connext.network>",
  "contributors": [
    "Arjun Bhuptani, <arjun@connext.network>",
    "Layne Haber <layne@connext.network>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ConnextProject/ethcalate-client/issues"
  },
  "homepage": "https://github.com/ConnextProject/ethcalate-client#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "gitbook-cli": "^2.3.2",
    "install": "^0.11.0",
    "jsdoc-babel": "^0.4.0",
    "jsdoc-to-markdown": "^4.0.1",
    "npm": "^6.1.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "dotenv": "^6.0.0",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-util": "^5.2.0",
    "gitbook": "^3.2.3",
    "human-standard-token-abi": "^1.0.2",
    "moxios": "^0.4.0",
    "sinon": "^6.0.0",
    "truffle-contract": "^3.0.4",
    "validate.js": "^0.12.0",
    "web3": "^1.0.0-beta.34"
  }
}